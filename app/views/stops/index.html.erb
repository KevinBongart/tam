<p id="notice"><%= notice %></p>

<h1>Stops</h1>

<table>
  <thead>
    <tr>
      <th>Tam</th>
      <th>Code</th>
      <th>Name</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Location type</th>
      <th>Parent stop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stops.each do |stop| %>
      <tr>
        <td><%= stop.tam_id %></td>
        <td><%= stop.code %></td>
        <td><%= stop.name %></td>
        <td><%= stop.lat %></td>
        <td><%= stop.long %></td>
        <td><%= stop.location_type %></td>
        <td><%= stop.parent_stop_id %></td>
        <td><%= link_to 'Show', stop %></td>
        <td><%= link_to 'Edit', edit_stop_path(stop) %></td>
        <td><%= link_to 'Destroy', stop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

