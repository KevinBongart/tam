<p id="notice"><%= notice %></p>

<h1>Transfers</h1>

<table>
  <thead>
    <tr>
      <th>From stop</th>
      <th>To stop</th>
      <th>Transfer type</th>
      <th>Min transfer time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= link_to transfer.from_stop, transfer.from_stop %></td>
        <td><%= link_to transfer.to_stop, transfer.to_stop %></td>
        <td><%= transfer.transfer_type %></td>
        <td><%= transfer.min_transfer_time %></td>
        <td><%= link_to 'Show', transfer %></td>
        <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
        <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

